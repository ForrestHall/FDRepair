# Find Diesel Repair - Environment
# Copy to .env and set real values. Never commit .env.

# Database (shared with rvrepairnearme or standalone)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=finddieselrepair

# Admin (api/seo-boost/config.php)
ADMIN_PASSWORD=set-a-strong-password

# Contact form + Free listing: reCAPTCHA + SMTP (submitContact.php, submitReg.php)
RECAPTCHA_SECRET=your-recaptcha-secret-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
MAIL_FROM_EMAIL=your-email@gmail.com
MAIL_FROM_NAME=RV Repair Contact Form
MAIL_TO_EMAIL=admin@example.com

# Stripe (api/seo-boost/config.php + api/stripe/webhook.php)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PRICE_ID=price_xxxxx
STRIPE_PRICE_ID_TOPPICKS=price_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# App
BASE_URL=https://finddieselrepair.com
SITE_NAME=Find Diesel Repair
# Optional: contact email for footer/legal/list links
# CONTACT_EMAIL=contact@finddieselrepair.com

# Google Places API (api/seo-boost/config.php)
GOOGLE_PLACES_API_KEY=

# AWS S3 (api/seo-boost/config.php; S3_REGION or AWS_REGION)
S3_BUCKET=finddieselrepair-uploads
S3_REGION=us-east-1
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Node / seo-boost-api.js (optional)
PORT=3000
